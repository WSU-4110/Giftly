<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FontSizeScreen">

    <TextView
        android:id="@+id/textView"
        android:layout_width="287dp"
        android:layout_height="42dp"
        android:layout_marginStart="111dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="112dp"
        android:text="Select a Font Size"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/fontSizeButton"
        android:layout_width="300dp"
        android:layout_height="68dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="56dp"
        android:drawableRight="@drawable/setting_arrow"
        android:fontFamily="sans-serif-black"
        android:textAlignment="center"
        android:text="Small"
        android:textAllCaps="false"
        android:textSize="@dimen/fab_margin"
        app:backgroundTint="#4B4B4B"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fontSizeButton2"
        android:layout_width="300dp"
        android:layout_height="68dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="56dp"
        android:drawableRight="@drawable/setting_arrow"
        android:fontFamily="sans-serif-black"
        android:text="Normal"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="@dimen/fab_margin"
        app:backgroundTint="#4B4B4B"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fontSizeButton" />

    <Button
        android:id="@+id/fontSizeButton3"
        android:layout_width="300dp"
        android:layout_height="68dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="56dp"
        android:drawableRight="@drawable/setting_arrow"
        android:fontFamily="sans-serif-black"
        android:text="Large"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="@dimen/fab_margin"
        app:backgroundTint="#4B4B4B"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fontSizeButton2" />

    <Button
        android:id="@+id/saveIt2"
        android:layout_width="157dp"
        android:layout_height="64dp"
        android:layout_marginStart="127dp"
        android:layout_marginTop="165dp"
        android:layout_marginEnd="127dp"
        android:fontFamily="sans-serif-black"
        android:text="Save"
        android:textAllCaps="false"
        android:textSize="20dp"
        app:backgroundTint="#4B4B4B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fontSizeButton3" />

</androidx.constraintlayout.widget.ConstraintLayout>