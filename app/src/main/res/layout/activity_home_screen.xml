<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1C1C"
    tools:context=".HomeScreen">

    <TextView
        android:id="@+id/greetDisplay"
        android:layout_width="126dp"
        android:layout_height="45dp"
        android:layout_marginStart="30dp"
        android:text="Welcome, "
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/TestDisplay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TestDisplay"
        android:layout_width="226dp"
        android:layout_height="45dp"
        android:layout_marginStart="-17dp"
        android:layout_marginEnd="29dp"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/greetDisplay"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addEventBtn"
        android:layout_width="134dp"
        android:layout_height="41dp"
        android:layout_marginStart="26dp"
        android:text="Add Event"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:backgroundTint="#008CF8"
        app:cornerRadius="40dp"
        app:layout_constraintEnd_toStartOf="@+id/YourGiftListBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/greetDisplay" />

    <Button
        android:id="@+id/YourGiftListBtn"
        android:layout_width="134dp"
        android:layout_height="41dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="27dp"
        android:text="Your Gift List"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:backgroundTint="#008CF8"
        app:cornerRadius="40dp"
        app:layout_constraintEnd_toStartOf="@+id/SettingsBtn"
        app:layout_constraintStart_toEndOf="@+id/addEventBtn"
        app:layout_constraintTop_toBottomOf="@+id/TestDisplay" />

    <Button
        android:id="@+id/SettingsBtn"
        android:layout_width="53dp"
        android:layout_height="48dp"
        android:layout_marginStart="-30dp"
        android:layout_marginTop="-10dp"
        android:layout_marginEnd="20dp"
        android:drawableTop="@drawable/settings_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/YourGiftListBtn"
        app:layout_constraintTop_toBottomOf="@+id/TestDisplay" />


</androidx.constraintlayout.widget.ConstraintLayout>