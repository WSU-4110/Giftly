<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CThemeScreen">

    <Button
        android:id="@+id/defaultTheme"
        android:layout_width="276dp"
        android:layout_height="68dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="77dp"
        android:layout_marginEnd="68dp"
        android:fontFamily="sans-serif-black"
        android:text="Default"
        android:textAllCaps="false"
        android:textSize="17dp"
        app:backgroundTint="#008CF8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/giftlyTheme"
        android:layout_width="276dp"
        android:layout_height="68dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="68dp"
        android:fontFamily="sans-serif-black"
        android:text="Giftly"
        android:textAllCaps="false"
        android:textSize="17dp"
        app:backgroundTint="#FF03DAC5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/defaultTheme" />

    <Button
        android:id="@+id/saveIt"
        android:layout_width="276dp"
        android:layout_height="68dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="68dp"
        android:fontFamily="sans-serif-black"
        android:text="Save"
        android:textAllCaps="false"
        android:textSize="17dp"
        app:backgroundTint="#D0EE2B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/giftlyTheme" />

</androidx.constraintlayout.widget.ConstraintLayout>