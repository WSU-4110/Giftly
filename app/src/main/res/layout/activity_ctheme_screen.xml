<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CThemeScreen">

    <TextView
        android:id="@+id/textView"
        android:layout_width="188dp"
        android:layout_height="49dp"
        android:layout_marginStart="111dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="112dp"
        android:text="Select a Theme"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/defaultTheme"
        android:layout_width="276dp"
        android:layout_height="68dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="68dp"
        android:fontFamily="sans-serif-black"
        android:text="Default"
        android:textAllCaps="false"
        android:textSize="20dp"
        app:backgroundTint="#008CF8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/giftlyTheme"
        android:layout_width="276dp"
        android:layout_height="68dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="68dp"
        android:fontFamily="sans-serif-black"
        android:text="Giftly"
        android:textAllCaps="false"
        android:textSize="20dp"
        app:backgroundTint="#29C972"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/defaultTheme" />

    <Button
        android:id="@+id/valentinesTheme"
        android:layout_width="276dp"
        android:layout_height="68dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="68dp"
        android:fontFamily="sans-serif-black"
        android:text="Valentines"
        android:textAllCaps="false"
        android:textSize="20dp"
        app:backgroundTint="#E96EED"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/giftlyTheme" />

    <Button
        android:id="@+id/easterTheme"
        android:layout_width="276dp"
        android:layout_height="68dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="68dp"
        android:fontFamily="sans-serif-black"
        android:text="Easter"
        android:textAllCaps="false"
        android:textSize="20dp"
        app:backgroundTint="#2FCDF1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/valentinesTheme" />

    <Button
        android:id="@+id/saveIt"
        android:layout_width="157dp"
        android:layout_height="64dp"
        android:layout_marginStart="127dp"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="127dp"
        android:layout_marginBottom="57dp"
        android:fontFamily="sans-serif-black"
        android:text="Save"
        android:textAllCaps="false"
        android:textSize="20dp"
        app:backgroundTint="#4B4B4B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/easterTheme" />

</androidx.constraintlayout.widget.ConstraintLayout>